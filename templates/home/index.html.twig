{% extends 'base.html.twig' %}

{% block title %}Inicio{% endblock %}

{% block body %}

                <table id="bibliotecas" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NOMBRE</th>
                            <th>Nº TRABAJADORES</th>
                            <th>DIRECCION</th>
                            <th>FECHA DE FUNDACIÓN</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in pagination  %}
                            <tr {% if loop.index is odd %}class="color"{% endif %}>
                                <td>{{ article.id }}</td>
                                <td>{{ article.nombre}}</td>
                                <td>{{ article.num_trabajadores}}</td>
                                <td>{{ article.direccion}}</td>
                                <td>{{ article.fecha_fundacion | date('d-m-Y') }}</td>
                                <td><a href="verBiblioteca/{{ article.id }}"><img src="/img/look.png" alt="Ver biblioteca" title="Ver biblioteca" /></a> <a href="editarBiblioteca/{{ article.id }}"><img src="/img/editar.png" alt="Editar biblioteca" title="Editar biblioteca" /></a> <a onclick="return confirm('¿Estás seguro de que quieres borrar la biblioteca: {{ article.nombre}} ?')" href="borrarBiblioteca/{{ article.id }}"><img src="/img/delete.png" alt="Borrar biblioteca" title="Borrar biblioteca" /></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
