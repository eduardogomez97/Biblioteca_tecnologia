{% extends 'base.html.twig' %}

{% block title %}Registro de bilioteca {% endblock %}

{% block body %}

<div>
    <h1>Edita la biblioteca "{{nombre_biblioteca}}"</h1>

    {% for message in app.flashes('exito') %}
        <div class="alert alert-success">
            {{message}}
        </div>
    {% endfor %}
    <div class="form-group row">
        {{ form_start(formularioeditarBiblioteca, {
            'attr': {'class': 'needs-validation'}
            }) 
        }}
            {{ form_errors(formularioeditarBiblioteca) }}
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    {{ form_row(formularioeditarBiblioteca.nombre, {
                        'attr': {'class': 'form-control','placeholder': nombre_biblioteca},
                        'label': ' ',
                        }) 
                    }}
                </div>  
                <div class="col-md-6 mb-3">
                    {{ form_row(formularioeditarBiblioteca.num_trabajadores, {
                        'attr': {'class': 'form-control','placeholder': ntrabajadores},
                        'label': ' ',
                        }) 
                    }}
                </div> 
            </div>  
            <div class="form-row">
                <div class="col-md-6 mb-3">
                    {{ form_row(formularioeditarBiblioteca.direccion, {
                        'attr': {'class': 'form-control','placeholder': direction},
                        'label': ' ',
                        }) 
                    }}
                </div>  
                <div class="col-md-6 mb-3">
                    {{ form_row(formularioeditarBiblioteca.fecha_fundacion, {
                        'attr': {'id': 'example-date-input','placeholder': fecha| date('d-m-Y')},
                        'label': 'Fecha de fundaci√≥n'
                        }) 
                    }}
                </div>
            </div>

            {{ form_row(formularioeditarBiblioteca.Editar, { 
                'label': 'Enviar', 
                'attr': {'class': 'btn btn-primary'}
                }) 
            }}
        {{ form_end(formularioeditarBiblioteca) }}
    </div>

{% endblock %}
